GEMINI_API_KEY="YOUR_GEMINI_API_KEY"

# description を毎回AI生成する（既定: true）
AI_DESCRIPTION_ALWAYS_CALL=true

# 優先docs（会社概要等）の取得上限（時間爆発防止）
PRIORITY_DOCS_MAX_LINKS_CAP=5
PROFILE_DISCOVERY_MAX_LINKS_CAP=4

# 代表者名は構造化ソース（TABLE/LABEL/ROLE/JSONLD）由来のみ採用（誤格納防止）
REP_REQUIRE_STRUCTURED_SOURCE=true
DATABASE_URL="sqlite:///data/companies.db"

# SQS worker (AWS)
AWS_REGION=ap-northeast-1
SQS_QUEUE_URL=https://sqs.ap-northeast-1.amazonaws.com/xxxxx/company-scrape-queue
S3_BUCKET=wabisabi-scrape-results-202602
S3_PREFIX=results/
WORKER_ID=worker-01
# Optional: label stored in DB source_csv
SOURCE_LABEL=hubspot_csv

# Optional
# SEARCH_ENGINES="ddg"  # 例: "ddg"
# SEARCH_ENGINE_TIMEOUT_SEC="12"
# SEARCH_PHASE_TIMEOUT_SEC="45"
# USE_AI="true"
# EXTRACT_DEBUG_JSONL_PATH="logs/extract_debug.jsonl"
# VERIFY_DOCS_REQUIRED="true"
# REP_STRICT_SOURCES="true"
# UPDATE_CHECK_ENABLED="true"
